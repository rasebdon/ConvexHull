    "configurations": [
        {
            "name": "C++ Launch Giftwrapping Visual",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/convexhull_debug.exe",
            "args": [ "--algo", "giftwrapping", "--type", "visual" ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": true,
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb"
            },
